<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hover1"
    android:padding="10dp"
    tools:context=".Feedback">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center_vertical"
        app:cardBackgroundColor="@color/colorPrimary"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tell us about you App Experience."
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/hover1"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/hover1">

                <EditText
                    android:id="@+id/feedbackexperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/hover1"
                    android:gravity="top"
                    android:hint="Start typing here..."
                    android:minHeight="200dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Any Changes you want to Suggest?"
                android:textAlignment="center"
                android:textColor="@color/hover1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/hover1">

                <EditText
                    android:id="@+id/feedbackchanges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/hover1"
                    android:gravity="top"
                    android:hint="Start typing here..."
                    android:minHeight="100dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Rate the App"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/hover1"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/hover1">

                <RatingBar
                    android:id="@+id/feedbackrating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:numStars="5"
                    android:progressTint="@color/colorscheme1"
                    android:stepSize="1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPadding="10dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/hover1">

                <Button
                    android:id="@+id/feedbacksubmission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mybutton"
                    android:text="Send Feedback"
                    android:textColor="@color/hover1"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>