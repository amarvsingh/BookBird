<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hover1"
    android:padding="10dp"
    tools:context=".ForgotPassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter the registered Email address"
            android:textAlignment="center"
            android:textColor="@color/black" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EmailForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email: "
            android:layout_marginTop="10dp"
            android:background="@drawable/input_box1"
            android:textColorHint="@color/colorPrimary"
            android:padding="10dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:drawableLeft="@drawable/email_icon"
                android:textCursorDrawable="@color/colorPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/resetpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:contentPadding="15dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Password Reset Email "
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/hover1"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>