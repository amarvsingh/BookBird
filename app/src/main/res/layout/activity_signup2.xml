<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hover1"
    tools:context=".Signup2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FullnameAsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fullname: "
            android:background="@drawable/input_box1"
            android:textColorHint="@color/colorPrimary"
            android:padding="10dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:drawableLeft="@drawable/name_icon"
                android:textCursorDrawable="@color/colorPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91- "
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/hover1"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ContactAsk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_box1"
                android:hint="Contact: "
                android:textColorHint="@color/colorPrimary"
                android:padding="10dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/phone_icon"
                    android:textCursorDrawable="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/UsernameAsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_box1"
            android:hint="Username: "
            android:padding="10dp"
            android:textColorHint="@color/colorPrimary"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/person1_icon"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@color/colorPrimary"
                android:textSize="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EmailAsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email: "
            android:layout_marginTop="10dp"
            android:background="@drawable/input_box1"
            android:textColorHint="@color/colorPrimary"
            android:padding="10dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:drawableLeft="@drawable/email_icon"
                android:textCursorDrawable="@color/colorPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/PasswordAsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password: "
            android:layout_marginTop="10dp"
            android:background="@drawable/input_box1"
            android:textColorHint="@color/colorPrimary"
            android:padding="10dp"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:drawableLeft="@drawable/email_icon"
                android:textCursorDrawable="@color/colorPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ConfirmPasswordAsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password: "
            android:layout_marginTop="10dp"
            android:background="@drawable/input_box1"
            android:textColorHint="@color/colorPrimary"
            android:padding="10dp"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:drawableLeft="@drawable/email_icon"
                android:textCursorDrawable="@color/colorPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:contentPadding="15dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/hover1"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>