<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hover1"
    tools:context=".Inbox">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewinbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardbeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Chat Feature is in BETA development, the notification is not supported yet, we would let you know as it is completely functioning through updates. You can anyway chat with other users."
                android:textColor="@color/hover1"
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/nochat"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/no_chat" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/nochattext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Conversation found"
            android:textSize="20dp"
            android:visibility="invisible"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>