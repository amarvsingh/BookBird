<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    app:contentPadding="10dp"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="10dp"
        app:cardBackgroundColor="@color/hover1"
        app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/buyeruploadedimage"
                    android:layout_width="150dp"
                    android:layout_height="171dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/buyerbookname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="BookName"
                    android:textSize="20dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/buyercondition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Condition"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/buyermrp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Mrp"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/buyerprice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Price"
                    android:textSize="20dp"
                    android:textColor="@color/red"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                    <ImageView
                        android:id="@+id/buyeruserlogo"
                        android:layout_width="25dp"
                        android:layout_height="27dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/user_logo_3" />

                    <TextView
                        android:id="@+id/buyerusername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_gravity="center_vertical"
                        android:text="//Username"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/buyeropenproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/mybutton"
            android:text="Open Product"
            android:textColor="@color/hover1"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>